<li class='list'>
    <%= link_to '#' do %>
      
      <div class='offer-info'>
        <div class='offer-category'>
          <div class='genre-category'>
            <h3 class='offer-title'>
              カテゴリー：<%= offer.category.name %>
            </h3>
          </div>
          <div class='genre-category'>
            <h3 class='offer-title'>
              ジャンル：<%= offer.genre.name %>
            </h3>
          </div>
        </div>

        <div class='offer-name-content'>
        <h3>
          <%= offer.order_name %>
        </h3>
      </div>
        
          <div class='offer-deadline'>
            期日 <span><%= offer.deadline %>まで</span>
          </div>
          <div class='offer-price'>
            予算 <span><%= offer.budget %>円</span>
          </div>
      </div>
      <div class='offer-user'>
        <span><%= link_to offer.user.nickname, user_path(offer.user.id) %>さんからの依頼</span>
      </div>
    <% end %>
</li>

